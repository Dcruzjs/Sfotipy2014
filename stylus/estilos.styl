	//-moz-animation parametro
	//-ms-animation parametro
	//-o-animation parametro
	//animation parametro

gris_oscuro = #333333
gris_claro = #818181
gris_mas_claro = #F0F0F0
rojo = #BD255B
a
	text-decoration none
body
	font-family 'Varela Round', san-serif
	font-size 16px
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0

.action
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.actions
	background rgba(black,0.3)
	bottom 0
	left 0
	padding 1em
	position absolute
	right 0
	text-align right

.author
	color gris_claro
.border-bottom
	border-bottom 1px solid gris_claro
.round
	border-radius 50%
	overflow hidden
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
.center-block
	margin 0 auto
.center-text
	text-align center
.close-icon
	color gris_claro
	font-size 1.2em
	position absolute
	right .5em
	top .7em
.container
	font-size 0
	padding 1.4rem
	text-align center
.header
	height 3.5em
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.input
	border 1px solid gris_claro
	border-radius 5px
	height 2.5em
	padding 0 1em 0 2em
.left
	float left
.menu
	display none
.name
	color gris_oscuro

.padding
	padding 1em
.padding-tb	
	padding 1em 0
.playing
	//display none
	&.small
		margin 0 auto
		width 20em
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
		
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%
	.state
		animation 250s state infinite linear
		background rojo
		border-radius 5px
		height 5px
		position relative
		width 30%
	.circle
		background gris_oscuro
		border-radius 5px
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
@keyframes state
	0%
		width 0
	100%
		width 100%

.relative
	position relative

.right
	float right
.search-icon
	color gris_claro
	position absolute
	left .5em
	top .8em
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
.playlist
	border-left 1px solid gris_claro
	display none
	padding 0 2em
	width 22em
	.list 
		list-style none
	.item
		padding 1em 0
		//border-bottom 1px solid gris_claro
	.action
			font-size .8em
.isotipo
	width 122px
.logo
	background white
	display none
	overflow hidden
	padding 1.3em 0
.username
	color gris_claro
	position relative
	top 9px
	margin-left .5em
	&:after
		border-left 7px solid transparent
		border-right 7px solid transparent
		border-top 9px solid gris_claro
		content ""
		display inline-block
		margin-left .4em

@media screen and (min-width:480px)

	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto
	
@media screen and (min-width:1000px)
	body
		background gris_mas_claro
	.avatar
		height 38px
		width 38px
	.button-menu
		display none
	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			overflow hidden
			width 62.5em
	.header
		border none
		height auto
		.title
			display none
	.menu
		border-top 1px solid gris_claro
		display block
		overflow hidden
		.item
			float left
			list-style none
			a
				border-top 5px solid transparent
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				&:hover
					border-top 5px solid gris_claro
	.music
		width 32.5em
		float left
		.description
			display none
	
		
	.wrap
		width 1000px
	.logo
	.playlist
		display block